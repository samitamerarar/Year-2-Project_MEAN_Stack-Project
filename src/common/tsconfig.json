{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceRoot": "src",
        "sourceMap": false,
        "inlineSourceMap": true,
        "declaration": true,
        "outDir": ".",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "include": [
        "src/*.ts",
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules/**/*",
        "**/*.spec.ts"
    ]
}