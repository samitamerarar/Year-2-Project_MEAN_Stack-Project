{
  "name": "server",
  "description": "Projet de base pour le cours de LOG2990",
  "version": "1.0.0",
  "private": true,
  "config": {
    "packetapi_mgr": "server"
  },
  "scripts": {
    "start": "rimraf out && tsc && concurrently --kill-others \"tsc -w \" \"nodemon out/server/app/www.js\" ",
    "lint": "tslint \"app/**/*.ts\" \"app/*.ts\" --force -t verbose || exit 0",
    "test": "mocha -r ts-node/register \"app/**/*.spec.ts\"",
    "test-once": "tsc && karma start karma.conf.js --single-run || npm run-script coverage",
    "coverage": "remap-istanbul -i coverage/coverage-final.json -o coverage -t html",
    "tsc": "tsc",
    "tsc:w": "tsc -w",
    "clean": "rimraf out node_modules",
    "postinstall": "rimraf false",
    "word2db": "tsc --outDir out --lib es2015 app/sendWordsToDB.ts && node out/sendWordsToDB.js",
    "fetchFreq": "tsc && node out/fetchFrequencies.js"
  },
  "dependencies": {
    "@types/socket.io": "1.4.30",
    "body-parser": "~1.16.0",
    "cookie-parser": "~1.4.0",
    "cors": "~2.8.1",
    "debug": "~2.2.0",
    "express": "4.15.4",
    "express-session": "~1.15.6",
    "morgan": "1.7.0",
    "nodemon": "^1.11.0",
    "pug": "^2.0.0-alpha6",
    "reflect-metadata": "^0.1.10",
    "serve-favicon": "~2.3.0",
    "socket.io": "1.7.2",
    "systemjs": "0.19.39",
    "mongodb": "^2.2.31"
  },
  "devDependencies": {
    "@types/body-parser": "1.16.5",
    "@types/chai": "4.0.4",
    "@types/cookie-parser": "1.4.1",
    "@types/cors": "2.8.1",
    "@types/express": "4.0.37",
    "@types/express-serve-static-core": "4.0.50",
    "@types/express-session": "^1.15.5",
    "@types/mocha": "2.2.42",
    "@types/mongodb": "^2.2.15",
    "@types/morgan": "1.7.32",
    "@types/node": "^8.0.47",
    "@types/node-uuid": "0.0.28",
    "chai": "4.0.0",
    "concurrently": "^3.0.0",
    "fs": "^0.0.1-security",
    "karma": "^1.3.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-cli": "^1.0.1",
    "karma-coverage": "^1.1.1",
    "karma-firefox-launcher": "^1.0.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.5",
    "mocha": "3.5.0",
    "readline": "^1.3.0",
    "remap-istanbul": "^0.8.4",
    "rimraf": "^2.5.4",
    "ts-node": "^3.3.0",
    "tslint": "^4.2.0",
    "tslint-eslint-rules": "^3.2.3",
    "typescript": "^2.4.2"
  }
}
